# ========================================
# Frontend Environment Variables (Vite)
# ========================================
# These are exposed to the browser and must be prefixed with VITE_
VITE_APP_MODE=website
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# Backend Environment Variables (Node.js)
# ========================================
# These are used by server/index.js
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_role_or_anon_key_here

# WhatsApp Business API Configuration
WA_TOKEN=your_whatsapp_business_token_here
WA_PHONE_NUMBER_ID=your_phone_number_id_here
MY_VERIFY_TOKEN=your_webhook_verify_token_here

# Server Configuration
PORT=3000

# ========================================
# DEPLOYMENT NOTES:
# ========================================
# GitHub Actions: Use VITE_SUPABASE_URL and VITE_SUPABASE_ANON_KEY
# Render (Backend): Use SUPABASE_URL and SUPABASE_KEY (without VITE_ prefix)
